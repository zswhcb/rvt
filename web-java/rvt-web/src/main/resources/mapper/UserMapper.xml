<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.foreworld.manage.mapper.UserMapper">
	<resultMap id="BaseResultMap" type="net.foreworld.manage.model.User">
		<id column="id" property="id" jdbcType="VARCHAR" />
		<result column="user_name" property="user_name" jdbcType="VARCHAR" />
		<result column="user_pass" property="user_pass" jdbcType="VARCHAR" />
		<result column="email" property="email" jdbcType="VARCHAR" />
	</resultMap>

	<select id="findByName" resultMap="BaseResultMap">
		SELECT a.* FROM s_user a WHERE
		a.user_name=#{user_name}
	</select>
</mapper>